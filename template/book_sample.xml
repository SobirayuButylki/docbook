    <sect2>
      <title>Special sections</title>
      <para>This is a level 2 section.</para>
      
      <para>Here is a program listing:</para>
      
        <programlisting language="java" linenumbering="numbered">
        <![CDATA[
          function foo(bar){
            String b = new String;
            return(b = bar);
          }
        ]]>
        </programlisting>
        
        <programlisting language="ruby" linenumbering="numbered">
        <![CDATA[
          def foo(bar)
            return "Hello" + bar
          end
        ]]>
        </programlisting>
        
        <programlisting language="javascript" linenumbering="numbered">
        <![CDATA[
           function hello(foo){
             var bar = foo;
             alert("Hello" + bar);
           }
        ]]>
        </programlisting>
        
        
